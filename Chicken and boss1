start_button = button.Button(screen_width // 2 - 130, screen_height // 2 - 150, start_img, 0.5)
exit_button = button.Button(screen_width // 2 - 130, screen_height // 2 + 50, exit_img, 0.5)
continue_button = button.Button(screen_width // 2 - 130, screen_height // 2 - 150, continue_img, 0.5)
resume_button = button.Button(screen_width // 2 - 130, screen_height // 2 - 150, resume_img, 0.5)
back_button = button.Button(screen_width // 2 - 130, screen_height // 2 - 50, back_img, 0.5)
control_button = button.Button(screen_width // 2 - 130, screen_height // 2 - 50, control_img, 0.5)
arrow1_button = button.Button(screen_width // 2 - 250, screen_height // 2 - 50, arrow1_img, 0.5)
arrow2_button = button.Button(screen_width // 2 + 220, screen_height // 2 - 50, arrow2_img, 0.5)

run = True
while run:
    clock.tick(fps)
    if start_game == -1:
        draw_bg()
        page = 0
        pygame.mixer.music.stop()
        if start_button.draw(screen):
            start_game = 1
            stop_game = False
            pygame.mixer.music.load('img/m' + str(random.randint(1, 5)) + '.wav')
            pygame.mixer.music.set_volume(0.6)
            pygame.mixer.music.play(-1, 0.0)
        if exit_button.draw(screen):
            run = False
        if control_button.draw(screen):
            start_game = 0
            stop_game = False
    if start_game == 0:
        screen.fill(colorList)
        flash_time1 += 1
        if flash_time1 < 20:
            draw_text('Press Esc To Continue', font, black, 190, 550)
        elif flash_time1 > 40:
            flash_time1 = 0
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                run = False
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_ESCAPE:
                    start_game = -1
                    color1 = random.randint(50, 200)
                    color2 = random.randint(50, 200)
                    color3 = random.randint(50, 200)
                    colorList = [color1, color2, color3]
                if event.key == pygame.K_LEFT:
                    page -= 1
                    color1 = random.randint(50, 200)
                    color2 = random.randint(50, 200)
                    color3 = random.randint(50, 200)
                    colorList = [color1, color2, color3]
                if event.key == pygame.K_RIGHT:
                    page += 1
                    color1 = random.randint(50, 200)
                    color2 = random.randint(50, 200)
                    color3 = random.randint(50, 200)
                    colorList = [color1, color2, color3]
        if arrow1_button.draw(screen):
            page -= 1
            color1 = random.randint(50, 200)
            color2 = random.randint(50, 200)
            color3 = random.randint(50, 200)
            colorList = [color1, color2, color3]
        if arrow2_button.draw(screen):
            page += 1
            color1 = random.randint(50, 200)
            color2 = random.randint(50, 200)
            color3 = random.randint(50, 200)
            colorList = [color1, color2, color3]
        if page < 0:
            page = 3
            color1 = random.randint(50, 200)
            color2 = random.randint(50, 200)
            color3 = random.randint(50, 200)
            colorList = [color1, color2, color3]
        if page > 3:
            page = 0
            color1 = random.randint(50, 200)
            color2 = random.randint(50, 200)
            color3 = random.randint(50, 200)
            colorList = [color1, color2, color3]
        if page == 0:
            draw_text('How to play', font_big, black, 240, 50)
            draw_text('Move Up:                W', font_big, black, 170, 150)
            draw_text('Move Down:            S', font_big, black, 170, 200)
            draw_text('Move Left:              A', font_big, black, 170, 250)
            draw_text('Move Right:            D', font_big, black, 170, 300)
            draw_text('Shoot:                 Space', font_big, black, 170, 350)
            draw_text('Boom:                    F', font_big, black, 170, 400)
            draw_text('Pause:                    P', font_big, black, 170, 450)
        if page == 1:
            screen.blit(box_img, (160, 80))
            draw_text(': Random Item', font_big, black, 225, 85)
            screen.blit(item0_img, (160, 155))
            draw_text(': Bonus Damage', font_big, black, 225, 160)
            screen.blit(item1_img, (160, 230))
            draw_text(': Bonus Fire Rate', font_big, black, 225, 235)
            screen.blit(item2_img, (160, 305))
            draw_text(': Bonus Health', font_big, black, 225, 310)
            screen.blit(item3_img, (160, 380))
            draw_text(': Bonus Boom', font_big, black, 225, 385)
            screen.blit(item4_img, (160, 455))
            draw_text(': Bonus Critical', font_big, black, 225, 460)
        if page == 2:
            screen.blit(chick1_img, (185, 90))
            draw_text(': Small Enemy', font_big, black, 280, 110)
            screen.blit(chick2_img, (180, 230))
            draw_text(': Big Enemy', font_big, black, 280, 265)
            screen.blit(meteor_img, (170, 400))
            draw_text(': Meteor', font_big, black, 280, 430)
        if page == 3:
            screen.blit(boss1_img, (135, 50))
            draw_text(': Boss', font_big, black, 350, 120)
            screen.blit(boss2_img, (120, 310))
            draw_text(': Final Boss', font_big, black, 350, 400)
    if start_game == 1:
        if stop_game == False:
            if game_over == False:
                draw_bg1()
                draw_text('Live: ', font, white, 10, 615)
                for x in range(spaceship.live):
                    screen.blit(heart_img, (60 + (x * 30), 610))
                draw_text('Boom: ', font, white, 380, 615)
                for x in range(spaceship.special):
                    screen.blit(boom_img, (450 + (x * 30), 595))
                box.update()
                box.draw()
                item_group.update()
                item_group.draw(screen)
                enemy_group.update()
                enemy_group1.update()
                enemy_bullet_group.update()
                enemy_bullet_group1.update()
                enemy_group.draw(screen)
                enemy_group1.draw(screen)
                enemy_bullet_group.draw(screen)
                enemy_bullet_group1.draw(screen)
                spaceship.update()
                boss1_bullet_group.update()
                boss1_group.draw(screen)
                boss1_bullet_group.draw(screen)
                spaceship_group.draw(screen)
                bullet_group.update()
                bullet_group.draw(screen)
                item_group.update()
                item_group.draw(screen)
                boss_group.draw(screen)
                boss_bullet_group.update()
                boss_bullet_group.draw(screen)
                explosion_group.update()
                explosion_group.draw(screen)
                explosions_group.update()
                explosions_group.draw(screen)
                boom_group.update()
                boom_group.draw(screen)
                meteor_group.draw(screen)
                meteor_group.update()
                meteor_group1.draw(screen)
                meteor_group1.update()

                for enemy in enemy_group:
                    if enemy.alive:
                        enemy.auto_walk()
                        if enemy.timereset <= 0:
                            enemy.draw()
                            enemy.move()
                            enemy.shoot()
                for enemy1 in enemy_group1:
                    if enemy1.alive:
                        enemy1.auto_walk()
                        if enemy1.timereset <= 0:
                            enemy1.draw()
                            enemy1.move()
                            enemy1.shoot()

                if spaceship.alive:
                    spaceship.auto_walk()
                    if spaceship.timereset < 100:
                        spaceship.shoot()
                        spaceship.fire()
                        if moving_left or moving_right or moving_up or moving_down:
                            spaceship.update_action(0)  # 1: run
                        spaceship.move(moving_left, moving_right, moving_up, moving_down)

                if spaceship.remaining <= 0 and spaceship.live > 0:
                    spaceship.reset()
                    spaceship.update()
                    spaceship.live -= 1
                if spaceship.live == 0:
                    game_over = True
                    lose_fx.play()

                if boss1.alive:
                    boss1.auto_walk()
                    boss1.update()
                    boss1.update_action(0)
                    if boss1.timereset < 0:
                        boss1.move()
                        boss1.shoot()
                    if boss1.remaining <= 0:
                        boss1.kill()

                if boss.alive:
                    boss.auto_walk()
                    boss.update()
                    if boss.timereset < 0:
                        boss.move()
                        boss.shoot()
                else:
                    item_group.empty()
                    box_group.empty()
                    meteor_group.empty()
                    meteor_group1.empty()
                    boss.time -= 1
                    timebossdie += 1
                    if boss.time > 0:
                        if timebossdie < 20:
                            screen.blit(boss.image, (boss.rect.x, boss.rect.y))
                        elif timebossdie > 40:
                            timebossdie = 0
                    if boss.time <= 0:
                        boss.kill()
                    if -5 < boss.time <= 0:
                        explosion_fx.play()
                        explosion = Explosion(boss.rect.centerx, boss.rect.centery, 6)
                        explosion_group.add(explosion)

                if not boss.alive and boss.time <= 0:
                    time -= 1
                    flash_time += 1
                    if time > 0:
                        win_fx.play()
                    pygame.mixer.music.stop()
                    spaceship.alive = False
                    if time <= 0:
                        timereturn -= 1
                        draw_bg3()
                        draw_text('You Win!!!', font_big, white, 235, 250)
                        if flash_time < 20:
                            draw_text('Press Any Thing To Continue', font, white, 155, 350)
                        elif flash_time > 40:
                            flash_time = 0
                        if timereturn <= 0:
                            for event in pygame.event.get():
                                if event.type == pygame.QUIT:
                                    run = False
                                if event.type == pygame.KEYDOWN:
                                    spaceship.alive = True
                                    start_game = -1
                                    bg = pygame.image.load("img/bg/bg" + str(random.randint(1, 7)) + ".png")
                                    spaceship.rect.x = int(screen_width / 2) - 25
                                    spaceship.rect.y = screen_height - 75
                                    spaceship.cooldown = 500
                                    spaceship.crit = 0
                                    spaceship.live = 5
                                    spaceship.timer = 30
                                    spaceship.timereset = 200
                                    spaceship.damage = 1
                                    spaceship.health = 5
                                    spaceship.remaining = 5
                                    spaceship.special = 50
                                    boom_group.empty()
                                    item_group.empty()
                                    bullet_group.empty()
                                    box_group.empty()
                                    meteor_group.empty()
                                    meteor_group1.empty()
                                    explosions_group.empty()
                                    explosion_group.empty()
                                    enemy_group.empty()
                                    enemy_bullet_group.empty()
                                    enemy_group1.empty()
                                    enemy_bullet_group1.empty()
                                    for i in range(6):
                                        for j in range(5):
                                            enemy = Enemies(110 + i * 80, 20 + j * 70)
                                            enemy_group.add(enemy)

                                    for i in range(5):
                                        for j in range(5):
                                            enemy1 = Enemies1(110 + i * 100, -650 + j * 150)
                                            enemy_group1.add(enemy1)
                                    box = Box(300, -1500)
                                    box_group.add(box)

                                    meteor = Meteor(-1400, -2700)
                                    meteor1 = Meteors(100, -5700)
                                    meteor_group.add(meteor)
                                    meteor_group1.add(meteor1)
                                    item0 = Item0(100, -5000)
                                    item2 = Item2(200, -7000)
                                    item1 = Item1(400, -90000)
                                    item3 = Item3(500, -11000)
                                    item4 = Item4(500, -13000)
                                    item_group.add(item2, item1, item0, item3, item4)
                                    boss1_group.empty()
                                    boss1_bullet_group.empty()
                                    boss1 = Boss1(int(screen_width / 2), screen_height - 750, 1)
                                    boss1_group.add(boss1)
                                    boss1.health = 200
                                    boss1.remaining = 200
                                    boss1.timer = 150
                                    boss1.live = 1
                                    boss1.timereset = 150
                                    boss_group.empty()
                                    boss_bullet_group.empty()
                                    boss = Boss(int(screen_width / 2), screen_height - 800, 1.5)
                                    boss_group.add(boss)
                                    boss.health = 200
                                    boss.remaining = 200
                                    boss.timer = 200
                                    boss.live = 3
                                    boss.timereset = 200
                                    time = 500
                                    timereturn = 100
                                    flash_time = 0
                                    pygame.mixer.music.load('img/m' + str(random.randint(1, 5)) + '.wav')
                                    pygame.mixer.music.set_volume(0.6)
                                    pygame.mixer.music.play(-1, 0.0)
                                    color1 = random.randint(0, 255)
                                    color2 = random.randint(0, 255)
                                    color3 = random.randint(0, 255)
                                    colorList = [color1, color2, color3]
            else:
                bg = pygame.image.load("img/bg/bg" + str(random.randint(1, 7)) + ".png")
                draw_bg2()
                if continue_button.draw(screen):
                    # reset variables
                    game_over = False
                    spaceship.rect.x = int(screen_width / 2) - 25
                    spaceship.rect.y = screen_height - 75
                    spaceship.cooldown = 500
                    spaceship.crit = 0
                    spaceship.live = 5
                    spaceship.damage = 1
                    spaceship.timer = 30
                    spaceship.timereset = 200
                    spaceship.health = 5
                    spaceship.remaining = 5
                    spaceship.special = 50

                if back_button.draw(screen):
                    start_game = -1
                    game_over = False
                    bg = pygame.image.load("img/bg/bg" + str(random.randint(1, 7)) + ".png")
                    spaceship.rect.x = int(screen_width / 2) - 25
                    spaceship.rect.y = screen_height - 75
                    spaceship.cooldown = 500
                    spaceship.crit = 0
                    spaceship.live = 5
                    spaceship.timer = 30
                    spaceship.timereset = 200
                    spaceship.damage = 1
                    spaceship.health = 5
                    spaceship.remaining = 5
                    spaceship.special = 50
                    boom_group.empty()
                    item_group.empty()
                    bullet_group.empty()
                    box_group.empty()
                    meteor_group.empty()
                    meteor_group1.empty()
                    explosions_group.empty()
                    explosion_group.empty()
                    enemy_group.empty()
                    enemy_bullet_group.empty()
                    enemy_group1.empty()
                    enemy_bullet_group1.empty()
                    for i in range(6):
                        for j in range(5):
                            enemy = Enemies(110 + i * 80, 20 + j * 70)
                            enemy_group.add(enemy)

                    for i in range(5):
                        for j in range(5):
                            enemy1 = Enemies1(110 + i * 100, -650 + j * 150)
                            enemy_group1.add(enemy1)
                    box = Box(300, -1500)
                    box_group.add(box)

                    meteor = Meteor(-1400, -2700)
                    meteor1 = Meteors(100, -5700)
                    meteor_group.add(meteor)
                    meteor_group1.add(meteor1)
                    item0 = Item0(100, -5000)
                    item2 = Item2(200, -7000)
                    item1 = Item1(400, -90000)
                    item3 = Item3(500, -11000)
                    item4 = Item4(500, -13000)
                    item_group.add(item2, item1, item0, item3, item4)
                    boss1_group.empty()
                    boss1_bullet_group.empty()
                    boss1 = Boss1(int(screen_width / 2), screen_height - 750, 1)
                    boss1_group.add(boss1)
                    boss1.health = 200
                    boss1.remaining = 200
                    boss1.timer = 150
                    boss1.live = 1
                    boss1.timereset = 150
                    boss_group.empty()
                    boss_bullet_group.empty()
                    boss = Boss(int(screen_width / 2), screen_height - 800, 1.5)
                    boss_group.add(boss)
                    boss.health = 200
                    boss.remaining = 200
                    boss.timer = 200
                    boss.live = 3
                    boss.timereset = 200
                    pygame.mixer.music.load('img/m' + str(random.randint(1, 5)) + '.wav')
                    pygame.mixer.music.set_volume(0.6)
                    pygame.mixer.music.play(-1, 0.0)
                if exit_button.draw(screen):
                    run = False

        else:
            draw_bg2()
            if resume_button.draw(screen):
                stop_game = False
            if back_button.draw(screen):
                start_game = -1
                bg = pygame.image.load("img/bg/bg" + str(random.randint(1, 7)) + ".png")
                spaceship.rect.x = int(screen_width / 2) - 25
                spaceship.rect.y = screen_height - 75
                spaceship.cooldown = 500
                spaceship.crit = 0
                spaceship.live = 5
                spaceship.remaining = 5
                spaceship.damage = 1
                spaceship.health = 5
                spaceship.timer = 30
                spaceship.timereset = 200
                spaceship.special = 50
                boom_group.empty()
                item_group.empty()
                bullet_group.empty()
                box_group.empty()
                meteor_group.empty()
                meteor_group1.empty()
                explosions_group.empty()
                explosion_group.empty()
                enemy_group.empty()
                enemy_bullet_group.empty()
                enemy_group1.empty()
                enemy_bullet_group1.empty()
                for i in range(6):
                    for j in range(5):
                        enemy = Enemies(110 + i * 80, 20 + j * 70)
                        enemy_group.add(enemy)

                for i in range(5):
                    for j in range(5):
                        enemy1 = Enemies1(110 + i * 100, -650 + j * 150)
                        enemy_group1.add(enemy1)
                box = Box(300, -1500)
                box_group.add(box)

                meteor = Meteor(-1400, -2700)
                meteor1 = Meteors(100, -5700)
                meteor_group.add(meteor)
                meteor_group1.add(meteor1)
                item0 = Item0(100, -5000)
                item2 = Item2(200, -7000)
                item1 = Item1(400, -90000)
                item3 = Item3(500, -11000)
                item4 = Item4(500, -13000)
                item_group.add(item2, item1, item0, item3, item4)
                boss1_group.empty()
                boss1_bullet_group.empty()
                boss1 = Boss1(int(screen_width / 2), screen_height - 750, 1)
                boss1_group.add(boss1)
                boss1.health = 200
                boss1.remaining = 200
                boss1.timer = 150
                boss1.live = 1
                boss1.timereset = 150
                boss_group.empty()
                boss_bullet_group.empty()
                boss = Boss(int(screen_width / 2), screen_height - 800, 1.5)
                boss_group.add(boss)
                boss.health = 200
                boss.remaining = 200
                boss.timer = 200
                boss.live = 3
                boss.timereset = 200
                pygame.mixer.music.load('img/m' + str(random.randint(1, 5)) + '.wav')
                pygame.mixer.music.set_volume(0.6)
                pygame.mixer.music.play(-1, 0.0)
    for event in pygame.event.get():
        # quit game
        if event.type == pygame.QUIT:
            run = False
        # keyboard presses
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_a:
                moving_left = True
            if event.key == pygame.K_d:
                moving_right = True
            if event.key == pygame.K_w:
                moving_up = True
            if event.key == pygame.K_s:
                moving_down = True
            if event.key == pygame.K_ESCAPE:
                start_game = -1
            if event.key == pygame.K_p and boss.live >= 1:
                stop_game = True

        # keyboard button released
        if event.type == pygame.KEYUP:
            if event.key == pygame.K_a:
                moving_left = False
            if event.key == pygame.K_d:
                moving_right = False
            if event.key == pygame.K_w:
                moving_up = False
            if event.key == pygame.K_s:
                moving_down = False

    pygame.display.update()

pygame.quit()
