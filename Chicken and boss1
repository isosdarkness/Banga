    screen.blit(bg1, (0, 0))


def draw_bg1():
    screen.blit(bg, (0, 0))


def draw_bg2():
    screen.fill(red)


def draw_bg3():
    screen.fill(colorList)


class Boss(pygame.sprite.Sprite):
    def __init__(self, x, y, scale):
        pygame.sprite.Sprite.__init__(self)
        self.scale = scale# phóng to , thu nhỏ hình ảnh
        self.alive = True
        # load ảnh
        img = pygame.image.load(f'img/Boss2/Idle/6.png')
        self.image = pygame.transform.scale(img, (int(img.get_width() * scale), int(img.get_height() * scale)))
        self.rect = self.image.get_rect()
        self.rect.center = (x, y - 20)
        # máu
        self.health = 200
        self.remaining = 200
        # hướng
        self.direction_x = 1
        self.direction_y = 1
        # thời gian cuối cùng bắn
        self.last_boss_shot = pygame.time.get_ticks()
        self.live = 3 # mạng
        # thời gian bắt đầu di chuyển
        self.timereset = 200
        self.time = 200
        self.timer = 200

    def update(self):
        self.check_alive()
        if self.alive:
            # hiển thị thanh máu
            pygame.draw.rect(screen, red, (self.rect.x, (self.rect.top - 10), self.rect.width, 10))
            if self.remaining > 0:
                pygame.draw.rect(screen, green, (
                    self.rect.x, (self.rect.top - 10), int(self.rect.width * (self.remaining / self.health)), 10))
            # sau khi boss chết
            if self.remaining <= 0 and self.live == 3:
                # hiệu ứng nổ
                explosion_fx.play()
                explosion = Explosion(boss.rect.centerx, boss.rect.centery, 5)
                explosion_group.add(explosion)
                # update lại hình ảnh , máu của boss, mạng của boss -1
                self.reset()
                self.live -= 1
                self.health = 300
                self.remaining = 300
                img = pygame.image.load(f'img/Boss2/Idle/0.png')
                self.image = pygame.transform.scale(img, (int(img.get_width() * 1.5), int(img.get_height() * 1.5)))
            # sau khi boss chết
            if self.remaining <= 0 and self.live == 2:
                explosion_fx.play()
                explosion = Explosion(boss.rect.centerx, boss.rect.centery, 5)
                explosion_group.add(explosion)
                self.reset()
                self.health = 400
                self.remaining = 400
                self.live -= 1
                img = pygame.image.load(f'img/Boss2/Idle/3.png')
                self.image = pygame.transform.scale(img, (int(img.get_width() * 1.5), int(img.get_height() * 1.5)))
            if self.remaining <= 0 and self.live == 1:
                self.live -= 1
                self.kill()
        if pygame.sprite.spritecollide(self, bullet_group, True, pygame.sprite.collide_mask):
            if self.timereset < 0 and self.timer == 0:
                self.remaining -= 10
                if spaceship.crit > 0:
                    if random.randint(spaceship.crit, 100) == 100:
                        self.remaining -= 20
        for boom in boom_group:
            if pygame.sprite.spritecollide(self, boom_group, True):
                explosion_fx.play()
                explosions = Explosions(boom.rect.centerx, boom.rect.centery, 4)
                explosions_group.add(explosions)
                if self.timereset < 0 and self.timer == 0:
                    self.remaining -= 100
                for meteor in meteor_group:
                    if abs(meteor.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor.rect.centery - boom.rect.centery) < 350:
                        meteor.health -= 10
                for meteor1 in meteor_group1:
                    if abs(meteor1.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor1.rect.centery - boom.rect.centery) < 350:
                        meteor1.health -= 10
            else:
                if boom.time <= 1:
                    if self.timereset < 0 and self.timer == 0:
                        if abs(self.rect.centerx - boom.rect.centerx) < 350 and abs(
                                self.rect.centery - boom.rect.centery) < 350:
                            self.remaining -= 100
        if self.remaining <= 0:
            Bonuss = [Item1, Item2, Item3, Item4, Item0]
            bonuss = random.choice(Bonuss)(self.rect.centerx, self.rect.centery)
            item_group.add(bonuss)

    def shoot(self):
        time_now = pygame.time.get_ticks()
        if self.live == 3:
            if 100 < self.remaining <= 200:
                boss_cooldown = 500
                if time_now - self.last_boss_shot > boss_cooldown:
                    attacking_player = random.choice(boss_group.sprites())
                    boss_bullet1 = Boss2_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom, 0)
                    boss_bullet_group.add(boss_bullet1)
                    self.last_boss_shot = time_now
            if self.remaining <= 100:
                boss_cooldown = 1000
                if time_now - self.last_boss_shot > boss_cooldown:
                    for i in range(10):
                        attacking_player = random.choice(boss_group.sprites())
                        boss_bullet1 = Boss2_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom,
                                                     i * 36)
                        boss_bullet_group.add(boss_bullet1)
                    self.last_boss_shot = time_now
        if self.live == 2:
            if 150 < self.remaining <= 300:
                boss_cooldown = 250
                if time_now - self.last_boss_shot > boss_cooldown:
                    attacking_player = random.choice(boss_group.sprites())
                    boss_bullet1 = Boss1_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom, 0)
                    boss_bullet_group.add(boss_bullet1)
                    self.last_boss_shot = time_now
            if self.remaining <= 150:
                boss_cooldown = 1500
                if time_now - self.last_boss_shot > boss_cooldown:
                    for i in range(10):
                        attacking_player = random.choice(boss_group.sprites())
                        boss_bullet1 = Boss1_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom,
                                                     i * 36)
                        boss_bullet_group.add(boss_bullet1)
                    self.last_boss_shot = time_now
        if self.live == 1:
            if 200 < self.remaining <= 400:
                boss_cooldown = 200
                if time_now - self.last_boss_shot > boss_cooldown:
                    attacking_player = random.choice(boss_group.sprites())
                    boss_bullet1 = Boss_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom, 0)
                    boss_bullet_group.add(boss_bullet1)
                    self.last_boss_shot = time_now
            if self.remaining <= 200:
                boss_cooldown = 1000
                if time_now - self.last_boss_shot > boss_cooldown:
                    for i in range(10):
                        attacking_player = random.choice(boss_group.sprites())
                        boss_bullet1 = Boss_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom, i * 36)
                        boss_bullet_group.add(boss_bullet1)
                    self.last_boss_shot = time_now

    def reset(self):
        self.timereset = 200
        self.rect.x = int(screen_width / 2) - 120
        self.rect.y = screen_height - 700
        self.timer = 80
        self.alive = True

    def move(self):
        dx = 0
        dy = 0
        if not boss1.alive:
            if self.live == 3 and self.timereset < 0:
                if self.remaining <= 200:
                    dx += self.direction_x * 2
                    if self.rect.left + dx > screen_width:
                        dx = screen_width - self.rect.left
                        self.direction_x *= -1
                    if self.rect.right + dx < 0:
                        dx = - self.rect.right
                        self.direction_x *= -1
                if self.remaining <= 150:
                    dx += self.direction_x * 3
                    if self.rect.left + dx > screen_width:
                        dx = screen_width - self.rect.left
                        self.direction_x *= -1
                    if self.rect.right + dx < 0:
                        dx = - self.rect.right
                        self.direction_x *= -1
                if self.remaining <= 100:
                    dx += self.direction_x * 4
                    if self.rect.left + dx > screen_width:
                        dx = screen_width - self.rect.left
                        self.direction_x *= -1
                    if self.rect.right + dx < 0:
                        dx = - self.rect.right
                        self.direction_x *= -1
            if self.live == 2 and self.timereset < 0:

                dx += self.direction_x * 4
                dy += self.direction_y * 2
                if self.rect.left + dx > screen_width:
                    dx = screen_width - self.rect.left
                    self.direction_x *= -1
                if self.rect.right + dx < 0:
                    dx = - self.rect.right
                    self.direction_x *= -1
                if self.rect.bottom + dy > 500:
                    dy = 500 - self.rect.bottom
                    self.direction_y *= -1
                if self.rect.top + dy < 0:
                    dy = - self.rect.top
                    self.direction_y *= -1
            if self.live == 1 and self.timereset < 0:

                dx += self.direction_x * 6
                dy += self.direction_y * 4

                if self.rect.left + dx > screen_width:
                    dx = screen_width - self.rect.left
                    self.direction_x *= -1
                if self.rect.right + dx < 0:
                    dx = - self.rect.right
                    self.direction_x *= -1
                if self.rect.top + dy > screen_height:
                    dy = screen_height - self.rect.top
                    self.direction_y *= -1
                if self.rect.bottom + dy < 0:
                    dy = - self.rect.bottom
                    self.direction_y *= -1

        self.rect.x += dx
        self.rect.y += dy

    def auto_walk(self):
        if not boss1.alive:
            dy = 0
            self.timer -= 1
            self.timereset -= 1
            dy += 1.5
            if self.timer <= 0:
                self.timer = 0
                self.rect.y -= 0.5
            self.rect.y += dy

    def check_alive(self):
        if self.live == 0:
            self.alive = False


class Boss1(pygame.sprite.Sprite):
    def __init__(self, x, y, scale):
        pygame.sprite.Sprite.__init__(self)
        self.scale = scale
        self.alive = True
        self.last_shot = pygame.time.get_ticks()
        self.health = 200
        self.remaining = 200
        self.direction_x = 1
        self.direction_y = 1
        self.last_boss_shot = pygame.time.get_ticks()
        self.timer = 150
        self.live = 1
        self.timereset = 150
        self.animation_list = []
        self.frame_index = 0
        self.action = 0
        self.update_time = pygame.time.get_ticks()

        # load all images for the players
        animation_types = ['Idle', 'Death']
        for animation in animation_types:
            # reset temporary list of images
            temp_list = []
            # count number of files in the folder
            num_of_frames = len(os.listdir(f'img/Boss1/{animation}'))
            for i in range(num_of_frames):
                img = pygame.image.load(f'img/Boss1/{animation}/{i}.png')
                img = pygame.transform.scale(img, (int(img.get_width() * scale), int(img.get_height() * scale)))
                temp_list.append(img)
            self.animation_list.append(temp_list)

        self.image = self.animation_list[self.action][self.frame_index]
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.rect.center = (x, y - 20)

    def update(self):
        self.check_alive()
        self.update_animation()
        pygame.draw.rect(screen, red, (self.rect.x, (self.rect.top - 10), self.rect.width, 10))
        if self.remaining > 0:
            pygame.draw.rect(screen, green, (
                self.rect.x, (self.rect.top - 10), int(self.rect.width * (self.remaining / self.health)), 10))
        if pygame.sprite.spritecollide(self, bullet_group, True, pygame.sprite.collide_mask):
            if self.timereset < 0 and self.timer == 0:
                self.remaining -= 10
                if spaceship.crit > 0:
                    if random.randint(spaceship.crit, 100) == 100:
                        self.remaining -= 20
        for boom in boom_group:
            if pygame.sprite.spritecollide(self, boom_group, True):
                explosion_fx.play()
                explosions = Explosions(boom.rect.centerx, boom.rect.centery, 4)
                explosions_group.add(explosions)
                if self.timereset < 0 and self.timer == 0:
                    self.remaining -= 100
                for meteor in meteor_group:
                    if abs(meteor.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor.rect.centery - boom.rect.centery) < 350:
                        meteor.health -= 10
                for meteor1 in meteor_group1:
                    if abs(meteor1.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor1.rect.centery - boom.rect.centery) < 350:
                        meteor1.health -= 10
            else:
                if boom.time <= 1:
                    if self.timereset < 0 and self.timer == 0:
                        if abs(self.rect.centerx - boom.rect.centerx) < 350 and abs(
                                self.rect.centery - boom.rect.centery) < 350:
                            self.remaining -= 100
        if self.remaining <= 0:
            Bonus0 = [Item1, Item2, Item3, Item4, Item0]
            bonus0 = random.choice(Bonus0)(self.rect.centerx, self.rect.centery)
            item_group.add(bonus0)

    def shoot(self):
        time_now = pygame.time.get_ticks()
        if 150 < self.remaining <= 200:
            boss_cooldown = 500
            if time_now - self.last_boss_shot > boss_cooldown:
                attacking_player = random.choice(boss1_group.sprites())
                boss_bullet2 = Boss4_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom, 0)
                boss1_bullet_group.add(boss_bullet2)
                self.last_boss_shot = time_now
        if 100 < self.remaining <= 150:
            boss_cooldown1 = 1000
            if time_now - self.last_boss_shot > boss_cooldown1:
                for i in range(10):
                    attacking_player = random.choice(boss1_group.sprites())
                    boss_bullet2 = Boss4_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom, i * 36)
                    boss1_bullet_group.add(boss_bullet2)
                self.last_boss_shot = time_now
        if self.remaining <= 100:
            boss_cooldown1 = 1500
            if time_now - self.last_boss_shot > boss_cooldown1:
                for i in range(15):
                    attacking_player = random.choice(boss1_group.sprites())
                    boss_bullet2 = Boss4_Bullets(attacking_player.rect.centerx, attacking_player.rect.bottom, i * 24)
                    boss1_bullet_group.add(boss_bullet2)
                self.last_boss_shot = time_now

    def move(self):
        dx = 0
        dy = 0
        if 170 < self.remaining <= 200:
            if self.timereset < 0:
                dx += self.direction_x * 2
                if self.rect.left + dx > screen_width:
                    dx = screen_width - self.rect.left
                    self.direction_x *= -1
                if self.rect.right + dx < 0:
                    dx = - self.rect.right
                    self.direction_x *= -1
        if 140 < self.remaining <= 170:
            if self.timereset < 0:
                dx += self.direction_x * 4
                if self.rect.left + dx > screen_width:
                    dx = screen_width - self.rect.left
                    self.direction_x *= -1
                if self.rect.right + dx < 0:
                    dx = - self.rect.right
                    self.direction_x *= -1
        if self.remaining <= 140:
            if self.timereset < 0:
                dx += self.direction_x * 6
                if self.rect.left + dx > screen_width:
                    dx = screen_width - self.rect.left
                    self.direction_x *= -1
                if self.rect.right + dx < 0:
                    dx = - self.rect.right
                    self.direction_x *= -1

        self.rect.x += dx
        self.rect.y += dy

    def update_animation(self):
        # update animation
        ANIMATION_COOLDOWN = 100
        # update image depending on current frame
        self.image = self.animation_list[self.action][self.frame_index]
        # check if enough time has passed since the last update
        if pygame.time.get_ticks() - self.update_time > ANIMATION_COOLDOWN:
            self.update_time = pygame.time.get_ticks()
            self.frame_index += 1
        # if the animation has run out the reset back to the start
        if self.frame_index >= len(self.animation_list[self.action]):
            if self.action == 1:
                self.frame_index = len(self.animation_list[self.action]) - 1
            else:
                self.frame_index = 0

    def update_action(self, new_action):
        # check if the new action is different to the previous one
        if new_action != self.action:
            self.action = new_action
            # update the animation settings
            self.frame_index = 0
            self.update_time = pygame.time.get_ticks()

    def auto_walk(self):
        dy = 0
        if not enemy1.alive:
            self.timer -= 1
            self.timereset -= 1
            dy += 1.5
            if self.timer <= 0:
                self.timer = 0
                self.rect.y -= 0.5
        self.rect.y += dy

    def check_alive(self):
        if self.remaining <= 0:
            self.remaining = 0
            self.alive = False
            explosion_fx.play()
            explosion = Explosion(self.rect.centerx, self.rect.centery, 4)
            explosion_group.add(explosion)


class Boss_Bullets(pygame.sprite.Sprite):
    def __init__(self, x, y, bend):
        pygame.sprite.Sprite.__init__(self)
        img = pygame.image.load(f'img/bulletx.png')
        self.image = pygame.transform.scale(img, (int(img.get_width() * 1), int(img.get_height() * 1)))
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]
        self.bend = bend

    def update(self):
        if 200 < boss.remaining <= 400:
            self.rect.y += 10
        if boss.remaining <= 200:
            self.rect.y += -math.sin(self.bend * math.pi / 180) * 12
            self.rect.x += math.cos(self.bend * math.pi / 180) * 12
        if self.rect.top > screen_height or self.rect.bottom < 0 or boss.live < 1:
            self.kill()
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            if spaceship.timereset < 0:
                self.kill()
                # reduce spaceship health
                spaceship.remaining -= 3
                explosion_fx.play()
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)


class Boss1_Bullets(pygame.sprite.Sprite):
    def __init__(self, x, y, bend):
        pygame.sprite.Sprite.__init__(self)
        img = pygame.image.load(f'img/bullet99.png')
        self.image = pygame.transform.scale(img, (int(img.get_width() * 1), int(img.get_height() * 2)))
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]
        self.bend = bend

    def update(self):
        if 150 < boss.remaining <= 300:
            self.rect.y += 10
        if boss.remaining <= 150:
            self.rect.y += -math.sin(self.bend * math.pi / 180) * 12
            self.rect.x += math.cos(self.bend * math.pi / 180) * 12
        if self.rect.top > screen_height or boss.live < 2:
            self.kill()
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            if spaceship.timereset < 0:
                self.kill()
                # reduce spaceship health
                spaceship.remaining -= 2
                explosion_fx.play()
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)


class Boss2_Bullets(pygame.sprite.Sprite):
    def __init__(self, x, y, bend):
        pygame.sprite.Sprite.__init__(self)
        img = pygame.image.load(f'img/bullet98.png')
        self.image = pygame.transform.scale(img, (int(img.get_width() * 1), int(img.get_height() * 1)))
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]
        self.time = 50
        self.bend = bend

    def update(self):
        dy = 0
        if 100 < boss.remaining <= 200:
            dy += 10
        if boss.remaining <= 100:
            dy += 4
            self.time -= 1
            if self.time <= 0:
                dy = 0
                self.rect.y += -math.sin(self.bend * math.pi / 180) * 10
                self.rect.x += math.cos(self.bend * math.pi / 180) * 10

        if self.rect.top > screen_height or boss.live < 3:
            self.kill()
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            if spaceship.timereset < 0:
                self.kill()
                # reduce spaceship health
                spaceship.remaining -= 1
                explosion_fx.play()
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)
        self.rect.y += dy


class Boss4_Bullets(pygame.sprite.Sprite):
    def __init__(self, x, y, bend):
        pygame.sprite.Sprite.__init__(self)
        self.image = pygame.image.load("img/bullet5.png")
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]
        self.bend = bend
        self.time = 16

    def update(self):
        dx = 0
        dy = 0
        self.time -= 1
        if 150 < boss1.remaining <= 200:
            self.rect.y += 10
        if 100 < boss1.remaining <= 150:
            if self.time > 0:
                self.rect.y += -math.sin(self.bend * math.pi / 180) * 12
                self.rect.x += math.cos(self.bend * math.pi / 180) * 12
            else:
                self.rect.y += 10
        if boss1.remaining <= 100:
            self.rect.y += -math.sin(self.bend * math.pi / 180) * 12
            self.rect.x += math.cos(self.bend * math.pi / 180) * 12
        if self.rect.top > screen_height + 300 or boss1.remaining <= 0:
            self.kill()
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            if spaceship.timereset < 0:
                self.kill()
                # reduce spaceship health
                spaceship.remaining -= 1
                explosion_fx.play()
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)
        self.rect.x += dx
        self.rect.y += dy


class Explosion(pygame.sprite.Sprite):
    def __init__(self, x, y, size):
        pygame.sprite.Sprite.__init__(self)
        self.images = []
        for num in range(1, 6):
            img = pygame.image.load(f"img/exp{num}.png")
            if size == 1:
                img = pygame.transform.scale(img, (20, 20))
            if size == 2:
                img = pygame.transform.scale(img, (40, 40))
            if size == 3:
                img = pygame.transform.scale(img, (160, 160))
            if size == 4:
                img = pygame.transform.scale(img, (300, 300))
            if size == 5:
                img = pygame.transform.scale(img, (400, 400))
            if size == 6:
                img = pygame.transform.scale(img, (2500, 2500))
            # add the image to the list
            self.images.append(img)
        self.index = 0
        self.image = self.images[self.index]
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]
        self.counter = 0

    def update(self):
        explosion_speed = 3
        # update explosion animation
        self.counter += 1

        if self.counter >= explosion_speed and self.index < len(self.images) - 1:
            self.counter = 0
            self.index += 1
            self.image = self.images[self.index]

        # if the animation is complete, delete explosion
        if self.index >= len(self.images) - 1 and self.counter >= explosion_speed:
            self.kill()


class Spaceship(pygame.sprite.Sprite):
    def __init__(self, x, y, scale, maxhealth):
        pygame.sprite.Sprite.__init__(self)
        self.scale = scale
        self.alive = True
        self.health = maxhealth
        self.remaining = maxhealth
        self.damage = 1
        self.cooldown = 500
        self.crit = 0
        self.special = 50
        self.bulletspeed = 5
        self.timer = 30
        self.last_shot = pygame.time.get_ticks()
        self.animation_list = []
        self.frame_index = 0
        self.action = 0
        self.update_time = pygame.time.get_ticks()
        self.live = 5
        self.timereset = 200

        # load all images for the players
        animation_types = ['Idle', 'Death']
        for animation in animation_types:
            # reset temporary list of images
            temp_list = []
            # count number of files in the folder
            num_of_frames = len(os.listdir(f'img/Player0/{animation}'))
            for i in range(num_of_frames):
                img = pygame.image.load(f'img/Player0/{animation}/{i}.png')
                img = pygame.transform.scale(img, (int(img.get_width() * scale), int(img.get_height() * scale)))
                temp_list.append(img)
            self.animation_list.append(temp_list)

        self.image = self.animation_list[self.action][self.frame_index]
        self.rect = self.image.get_rect()
        self.rect.center = (x, y + 50)

    def update(self):
        self.update_animation()
        self.check_alive()
        pygame.draw.rect(screen, red, (self.rect.x, (self.rect.bottom + 10), self.rect.width, 10))
        if self.remaining > 0:
            pygame.draw.rect(screen, green, (
                self.rect.x, (self.rect.bottom + 10), int(self.rect.width * (self.remaining / self.health)), 10))
        if pygame.sprite.spritecollide(self, boss_group, False, pygame.sprite.collide_mask):
            boss.direction_y *= -1
            boss.direction_x *= -1
            if self.timereset < 0 and boss.alive:
                explosion_fx.play()
                self.remaining -= 5
                explosion = Explosion(self.rect.centerx, self.rect.centery, 3)
                explosion_group.add(explosion)
        if pygame.sprite.spritecollide(self, boss1_group, False, pygame.sprite.collide_mask):
            if self.timereset < 0:
                explosion_fx.play()
                self.remaining -= 5
                explosion = Explosion(self.rect.centerx, self.rect.centery, 3)
                explosion_group.add(explosion)
        if pygame.sprite.spritecollide(self, enemy_group, False, pygame.sprite.collide_mask):
            if self.timereset < 0:
                explosion_fx.play()
                self.remaining -= 5
                explosion = Explosion(self.rect.centerx, self.rect.centery, 3)
                explosion_group.add(explosion)
        if pygame.sprite.spritecollide(self, enemy_group1, False, pygame.sprite.collide_mask):
            if self.timereset < 0:
                explosion_fx.play()
                self.remaining -= 5
                explosion = Explosion(self.rect.centerx, self.rect.centery, 3)
                explosion_group.add(explosion)

    def move(self, moving_left, moving_right, moving_up, moving_down):
        # reset movement variables
        dx = 0
        dy = 0
        # assign movement variables if moving left or right
        if moving_left:
            dx = -5
        if moving_right:
            dx = 5
        if moving_up:
            dy = -5
        if moving_down:
            dy = 5
        if self.rect.right + dx > screen_width:
            dx = screen_width - self.rect.right
        if self.rect.left + dx < 0:
            dx = - self.rect.left
        if self.rect.bottom + dy > screen_height:
            dy = screen_height - self.rect.bottom
        if self.rect.top + dy < 0:
            dy = -self.rect.top
        # update rectangle position
        self.rect.x += dx
        self.rect.y += dy

    def reset(self):
        self.timereset = 200
        self.rect.x = int(screen_width / 2) - 25
        self.rect.y = screen_height - 75
        self.remaining = 5
        self.health = 5
        self.timer = 30
        self.damage -= 1
        self.crit -= 10
        self.cooldown += 50
        self.special -= 0
        if self.cooldown >= 500:
            self.cooldown = 500
        if self.crit <= 0:
            self.crit = 0
        if self.damage <= 1:
            self.damage = 1
        self.alive = True

    def shoot(self):
        time_now = pygame.time.get_ticks()
        key = pygame.key.get_pressed()
        if key[pygame.K_SPACE] and time_now - self.last_shot > self.cooldown:
            laser_fx.play()
            if self.damage == 1:
                bullet = Bullets(self.rect.centerx, self.rect.top, 0)
                bullet_group.add(bullet)
                self.last_shot = time_now
            if self.damage == 2:
                bullet0 = Bullets(self.rect.centerx - 10, self.rect.top, 0)
                bullet = Bullets(self.rect.centerx + 10, self.rect.top, 0)
                bullet_group.add(bullet0, bullet)
                self.last_shot = time_now
            if self.damage == 3:
                bullet0 = Bullets(self.rect.centerx - 20, self.rect.top, 0)
                bullet1 = Bullets(self.rect.centerx, self.rect.top - 10, 0)
                bullet = Bullets(self.rect.centerx + 20, self.rect.top, 0)
                bullet_group.add(bullet0, bullet1, bullet)
                self.last_shot = time_now
            if self.damage == 4:
                for i in range(-3, 4, 2):
                    bullet = Bullets(self.rect.centerx, self.rect.top, i * 12)
                    bullet_group.add(bullet)
                self.last_shot = time_now
            if self.damage == 5:
                for i in range(-2, 3):
                    bullet = Bullets(self.rect.centerx, self.rect.top, i * 15)
                    bullet_group.add(bullet)
                self.last_shot = time_now
            if self.damage == 6:
                for i in range(-5, 6, 2):
                    bullet = Bullets(self.rect.centerx, self.rect.top, i * 7.6)
                    bullet_group.add(bullet)
                self.last_shot = time_now
            if self.damage == 7:
                for i in range(-3, 4):
                    bullet = Bullets(self.rect.centerx, self.rect.top, i * 11.5)
                    bullet_group.add(bullet)
                self.last_shot = time_now

    def fire(self):
        time_now = pygame.time.get_ticks()
        key = pygame.key.get_pressed()
        if key[pygame.K_f] and time_now - self.last_shot > self.cooldown:
            self.special -= 1
            if self.special >= 0:
                boom = Booms(self.rect.centerx + random.randint(-30, 30), self.rect.top, 0.5)
                boom_group.add(boom)
                self.last_shot = time_now

    def update_animation(self):
        # update animation
        ANIMATION_COOLDOWN = 100
        # update image depending on current frame
        self.image = self.animation_list[self.action][self.frame_index]
        # check if enough time has passed since the last update
        if pygame.time.get_ticks() - self.update_time > ANIMATION_COOLDOWN:
            self.update_time = pygame.time.get_ticks()
            self.frame_index += 1
        # if the animation has run out the reset back to the start
        if self.frame_index >= len(self.animation_list[self.action]):
            if self.action == 1:
                self.frame_index = len(self.animation_list[self.action]) - 1
            else:
                self.frame_index = 0

    def update_action(self, new_action):
        # check if the new action is different to the previous one
        if new_action != self.action:
            self.action = new_action
            # update the animation settings
            self.frame_index = 0
            self.update_time = pygame.time.get_ticks()

    def auto_walk(self):
        dy = 0
        self.timer -= 1
        dy -= 0.5
        self.timereset -= 1
        if self.timer <= 0:
            self.timer = 0
            self.rect.y += 1
        self.rect.y += dy

    def check_alive(self):
        if self.remaining <= 0:
            self.remaining = 0
            self.alive = False
            explosion_fx.play()
            explosion = Explosion(self.rect.centerx, self.rect.centery, 3)
            explosion_group.add(explosion)


class Bullets(pygame.sprite.Sprite):
    def __init__(self, x, y, bend):
        pygame.sprite.Sprite.__init__(self)
        self.image = pygame.image.load("img/bullet1/dan" + str(random.randint(1, 10)) + ".png")
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]
        self.bend = bend

    def update(self):
        self.rect.y -= math.cos(self.bend * math.pi / 180) * 15
        self.rect.x += math.tan(self.bend * math.pi / 180) * 15
        if pygame.sprite.spritecollide(self, enemy_group, False, pygame.sprite.collide_mask):
            if enemy.timereset < 0:
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)
                explosion_fx.play()
        if pygame.sprite.spritecollide(self, enemy_group1, False, pygame.sprite.collide_mask):
            if enemy1.timereset < 0:
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)
                explosion_fx.play()
        if pygame.sprite.spritecollide(self, boss_group, False, pygame.sprite.collide_mask):
            if boss.timereset < 0:
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)
                explosion_fx.play()
        if pygame.sprite.spritecollide(self, boss1_group, False, pygame.sprite.collide_mask):
            if boss1.timereset < 0:
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)
                explosion_fx.play()
        if self.rect.bottom < 0:
            self.kill()


class Booms(pygame.sprite.Sprite):
    def __init__(self, x, y, scale):
        pygame.sprite.Sprite.__init__(self)
        self.scale = scale
        self.animation_list = []
        self.frame_index = 0
        self.action = 0
        self.update_time = pygame.time.get_ticks()
        self.time = 50
        self.alive = True
        # load all images for the players
        animation_types = ['Idle']
        for animation in animation_types:
            # reset temporary list of images
            temp_list = []
            # count number of files in the folder
            num_of_frames = len(os.listdir(f'img/Boom/{animation}'))
            for i in range(num_of_frames):
                img = pygame.image.load(f'img/Boom/{animation}/{i}.png')
                img = pygame.transform.scale(img, (int(img.get_width() * scale), int(img.get_height() * scale)))
                temp_list.append(img)
            self.animation_list.append(temp_list)

        self.image = self.animation_list[self.action][self.frame_index]
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.initSound = pygame.mixer.Sound("img/fwrun.wav")
        pygame.mixer.Sound.play(self.initSound)

    def update(self):
        self.update_animation()
        self.time -= 1
        self.rect.y -= 5
        if self.time <= 0:
            explosion_fx.play()
            self.kill()
            explosions = Explosions(self.rect.centerx, self.rect.centery, 4)
            explosions_group.add(explosions)

    def update_animation(self):
        # update animation
        ANIMATION_COOLDOWN = 10
        # update image depending on current frame
        self.image = self.animation_list[self.action][self.frame_index]
        # check if enough time has passed since the last update
        if pygame.time.get_ticks() - self.update_time > ANIMATION_COOLDOWN:
            self.update_time = pygame.time.get_ticks()
            self.frame_index += 1
        # if the animation has run out the reset back to the start
        if self.frame_index >= len(self.animation_list[self.action]):
            if self.action == 1:
                self.frame_index = len(self.animation_list[self.action]) - 1
            else:
                self.frame_index = 0

    def update_action(self, new_action):
        # check if the new action is different to the previous one
        if new_action != self.action:
            self.action = new_action
            # update the animation settings
            self.frame_index = 0
            self.update_time = pygame.time.get_ticks()


class Explosions(pygame.sprite.Sprite):
    def __init__(self, x, y, size):
        pygame.sprite.Sprite.__init__(self)
        self.images = []
        for num in range(0, 11):
            img = pygame.image.load(f"img/Explode/b{num}.png")
            if size == 1:
                img = pygame.transform.scale(img, (20, 20))
            if size == 2:
                img = pygame.transform.scale(img, (40, 40))
            if size == 3:
                img = pygame.transform.scale(img, (160, 160))
            if size == 4:
                img = pygame.transform.scale(img, (650, 650))
            # add the image to the list
            self.images.append(img)
        self.index = 0
        self.image = self.images[self.index]
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]
        self.counter = 0

    def update(self):
        explosion_speed = 3
        # update explosion animation
        self.counter += 1

        if self.counter >= explosion_speed and self.index < len(self.images) - 1:
            self.counter = 0
            self.index += 1
            self.image = self.images[self.index]

        # if the animation is complete, delete explosion
        if self.index >= len(self.images) - 1 and self.counter >= explosion_speed:
            self.kill()


class Box(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        self.image = pygame.image.load("img/Item/box.png")
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.health = 1
        self.flip = False
        self.alive = True

    def reset(self):
        self.rect.x = random.randint(50, 550)
        self.rect.y = -30000
        self.health = 1
        self.image = pygame.image.load("img/Item/box.png")

    def update(self):
        self.check_alive()
        self.rect.y += 1
        if pygame.sprite.spritecollide(self, bullet_group, False, pygame.sprite.collide_mask):
            self.health -= 1
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            self.health -= 1
        if self.health <= 0:
            Bonus3 = [Item1, Item2, Item3, Item4, Item0]
            bonus3 = random.choice(Bonus3)(self.rect.centerx, self.rect.centery)
            item_group.add(bonus3)

        if self.rect.y > screen_height + 100 or self.health <= 0:
            self.reset()

    def check_alive(self):
        if self.health <= 0:
            self.health = 0
            self.alive = False

    def draw(self):
        screen.blit(pygame.transform.flip(self.image, self.flip, False), self.rect)


class Item0(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        self.image = pygame.image.load("img/Item/item0.png")
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.flip = False
        self.health = 1
        self.alive = True

    def update(self):
        self.check_alive()
        self.rect.y += random.randint(1, 2)
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            item_fx.play()
            self.health -= 1
            spaceship.damage += 1
            if spaceship.damage >= 7:
                spaceship.damage = 7
        if self.rect.y > screen_height + 100 or self.health <= 0:
            self.reset()

    def check_alive(self):
        if self.health <= 0:
            self.health = 0
            self.alive = False

    def reset(self):
        self.rect.x = random.randint(50, 550)
        self.rect.y = -35000
        self.health = 1

    def draw(self):
        screen.blit(pygame.transform.flip(self.image, self.flip, False), self.rect)


