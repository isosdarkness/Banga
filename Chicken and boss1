class Item4(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        self.image = pygame.image.load("img/Item/item4.png")
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.flip = False
        self.health = 1
        self.alive = True

    def update(self):
        self.check_alive()
        self.rect.y += random.randint(1, 2)
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            item_fx.play()
            self.health -= 1
            spaceship.crit += 100
            if spaceship.crit >= 100:
                spaceship.crit = 100
        if self.rect.y > screen_height + 100 or self.health <= 0:
            self.reset()

    def check_alive(self):
        if self.health <= 0:
            self.health = 0
            self.alive = False

    def reset(self):
        self.rect.x = random.randint(50, 550)
        self.rect.y = -55000
        self.health = 1

    def draw(self):
        screen.blit(pygame.transform.flip(self.image, self.flip, False), self.rect)


class Meteor(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        self.images = []
        self.index = 0
        self.images.append(pygame.image.load("img/meteor.png"))
        for i in range(360):
            self.images.append(pygame.transform.rotate(self.images[0], (i + 1)))
        self.image = self.images[self.index]
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.health = 3
        self.alive = True
        self.flip = False

    def update(self):
        self.check_alive()
        self.index = (self.index + 1) % 360
        self.image = self.images[self.index]
        self.rect.y += random.randint(5, 8)
        self.rect.x += random.randint(3, 7)

        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            self.health -= 3
            # reduce spaceship health
            if spaceship.timereset < 0:
                explosion_fx.play()
                spaceship.remaining -= 3
                explosion = Explosion(self.rect.centerx, self.rect.centery, 3)
                explosion_group.add(explosion)

        for boom in boom_group:
            if pygame.sprite.spritecollide(self, boom_group, True):
                explosion_fx.play()
                explosions = Explosions(boom.rect.centerx, boom.rect.centery, 4)
                explosions_group.add(explosions)
                for meteor in meteor_group:
                    if abs(meteor.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor.rect.centery - boom.rect.centery) < 350:
                        meteor.health -= 10
                for meteor1 in meteor_group1:
                    if abs(meteor1.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor1.rect.centery - boom.rect.centery) < 350:
                        meteor1.health -= 10
                for enemy in enemy_group:
                    if enemy.timereset < 0:
                        if abs(enemy.rect.centerx - boom.rect.centerx) < 350 and abs(
                                enemy.rect.centery - boom.rect.centery) < 350:
                            enemy.health -= 10
                for enemy1 in enemy_group1:
                    if enemy1.timereset < 0:
                        if abs(enemy1.rect.centerx - boom.rect.centerx) < 350 and abs(
                                enemy1.rect.centery - boom.rect.centery) < 350:
                            enemy1.health -= 10
                for boss in boss_group:
                    if boss.timereset < 0:
                        if abs(boss.rect.centerx - boom.rect.centerx) < 350 and abs(
                                boss.rect.centery - boom.rect.centery) < 350:
                            boss.remaining -= 100
                for boss1 in boss1_group:
                    if boss1.timereset < 0:
                        if abs(boss1.rect.centerx - boom.rect.centerx) < 350 and abs(
                                boss1.rect.centery - boom.rect.centery) < 350:
                            boss1.remaining -= 100
            if boom.time <= 1:
                if abs(self.rect.centerx - boom.rect.centerx) < 350 and abs(
                        self.rect.centery - boom.rect.centery) < 350:
                    self.health -= 10

        if pygame.sprite.spritecollide(self, bullet_group, True, pygame.sprite.collide_mask):
            self.health -= spaceship.damage

        if self.rect.y > screen_height + 100 or self.health <= 0:
            self.reset()

    def reset(self):
        self.rect.x = random.randint(screen_width * -2, screen_width * -2)
        self.rect.y -= random.randint(2000, 2500)
        self.health = 3

    def check_alive(self):
        if self.health <= 0:
            self.health = 0
            self.alive = False

    def draw(self):
        screen.blit(pygame.transform.flip(self.image, self.flip, False), self.rect)


class Meteors(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        self.images = []
        self.index = 0
        self.images.append(pygame.image.load("img/meteor2.png"))
        for i in range(360):
            self.images.append(pygame.transform.rotate(self.images[0], (i + 1)))
        self.image = self.images[self.index]
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.health = 3
        self.alive = True
        self.flip = False
        self.direction_x = 1
        self.direction_y = 1

    def update(self):
        self.check_alive()
        self.index = (self.index + 1) % 360
        self.image = self.images[self.index]
        dx = 0
        dy = 0
        dy += 5 * self.direction_y
        dx += 5 * self.direction_x

        if self.rect.right + dx > screen_width:
            dx = screen_width - self.rect.right
            self.direction_x *= -1
        if self.rect.left + dx < 0:
            dx = - self.rect.left
            self.direction_x *= -1
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            self.health -= 3
            # reduce spaceship health
            if spaceship.timereset < 0:
                explosion_fx.play()
                spaceship.remaining -= 3
                explosion = Explosion(self.rect.centerx, self.rect.centery, 3)
                explosion_group.add(explosion)
        if pygame.sprite.spritecollide(self, bullet_group, True, pygame.sprite.collide_mask):
            self.health -= spaceship.damage

        for boom in boom_group:
            if pygame.sprite.spritecollide(self, boom_group, True):
                explosion_fx.play()
                explosions = Explosions(boom.rect.centerx, boom.rect.centery, 4)
                explosions_group.add(explosions)
                for meteor in meteor_group:
                    if abs(meteor.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor.rect.centery - boom.rect.centery) < 350:
                        meteor.health -= 10
                for meteor1 in meteor_group1:
                    if abs(meteor1.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor1.rect.centery - boom.rect.centery) < 350:
                        meteor1.health -= 10
                for enemy in enemy_group:
                    if enemy.timereset < 0:
                        if abs(enemy.rect.centerx - boom.rect.centerx) < 350 and abs(
                                enemy.rect.centery - boom.rect.centery) < 350:
                            enemy.health -= 10
                for enemy1 in enemy_group1:
                    if enemy1.timereset < 0:
                        if abs(enemy1.rect.centerx - boom.rect.centerx) < 350 and abs(
                                enemy1.rect.centery - boom.rect.centery) < 350:
                            enemy1.health -= 10
                for boss in boss_group:
                    if boss.timereset < 0:
                        if abs(boss.rect.centerx - boom.rect.centerx) < 350 and abs(
                                boss.rect.centery - boom.rect.centery) < 350:
                            boss.remaining -= 100
                for boss1 in boss1_group:
                    if boss1.timereset < 0:
                        if abs(boss1.rect.centerx - boom.rect.centerx) < 350 and abs(
                                boss1.rect.centery - boom.rect.centery) < 350:
                            boss1.remaining -= 100
            if boom.time <= 1:
                if abs(self.rect.centerx - boom.rect.centerx) < 350 and abs(
                        self.rect.centery - boom.rect.centery) < 350:
                    self.health -= 10

        if self.rect.y > screen_height + 100 or self.health <= 0:
            self.reset()

        self.rect.x += dx
        self.rect.y += dy

    def reset(self):
        self.rect.x = random.randint(100, 500)
        self.rect.y = random.randint(-3600, -3400)
        self.health = 3

    def check_alive(self):
        if self.health <= 0:
            self.health = 0
            self.alive = False

    def draw(self):
        screen.blit(pygame.transform.flip(self.image, self.flip, False), self.rect)


class Enemies(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        self.alive = True
        self.animation_list = []
        self.frame_index = 0
        self.action = 0
        self.update_time = pygame.time.get_ticks()
        self.last_enemy_shoot = pygame.time.get_ticks()
        self.health = 2
        self.timer = 30
        self.timereset = 100
        self.last_enemy_shot = pygame.time.get_ticks()

        # load all images for the players
        animation_types = ['Idle', 'Death']
        for animation in animation_types:
            # reset temporary list of images
            temp_list = []
            # count number of files in the folder
            num_of_frames = len(os.listdir(f'img/chick2/{animation}'))
            for i in range(num_of_frames):
                img = pygame.image.load(f'img/chick2/{animation}/{i}.png')
                img = pygame.transform.scale(img, (int(img.get_width()), int(img.get_height())))
                temp_list.append(img)
            self.animation_list.append(temp_list)

        self.image = self.animation_list[self.action][self.frame_index]
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.move_counter = 0
        self.move_direction = 1
        self.flip = False

    def update(self):
        self.check_alive()
        self.update_animation()
        if pygame.sprite.spritecollide(self, bullet_group, True, pygame.sprite.collide_mask):
            if self.timereset < 0:
                self.health -= spaceship.damage
                if spaceship.crit > 0:
                    if random.randint(spaceship.crit, 100) == 100:
                        self.health -= spaceship.damage * 2
        for boom in boom_group:
            if pygame.sprite.spritecollide(self, boom_group, True):
                explosion_fx.play()
                explosions = Explosions(boom.rect.centerx, boom.rect.centery, 4)
                explosions_group.add(explosions)
                for enemy in enemy_group:
                    if enemy.timereset < 0:
                        if abs(enemy.rect.centerx - boom.rect.centerx) < 350 and abs(
                                enemy.rect.centery - boom.rect.centery) < 350:
                            enemy.health -= 10
                for meteor in meteor_group:
                    if abs(meteor.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor.rect.centery - boom.rect.centery) < 350:
                        meteor.health -= 10
                for meteor1 in meteor_group1:
                    if abs(meteor1.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor1.rect.centery - boom.rect.centery) < 350:
                        meteor1.health -= 10
            if boom.time <= 1:
                if self.timereset < 0:
                    if abs(self.rect.centerx - boom.rect.centerx) < 350 and abs(
                            self.rect.centery - boom.rect.centery) < 350:
                        self.health -= 10

        if self.alive == False and random.randint(1, 20) == 1:
            Bonus = [Item1, Item2, Item3, Item4, Item0]
            bonus = random.choice(Bonus)(self.rect.centerx, self.rect.centery)
            item_group.add(bonus)

    def move(self):
        dx = 0
        dx += self.move_direction * 3
        self.move_counter += 1
        if abs(self.move_counter) > 30:
            self.move_direction *= -1
            self.move_counter *= self.move_direction
        if self.move_direction == 1:
            self.flip = False
        if self.move_direction == -1:
            self.flip = True
        self.rect.x += dx

    def shoot(self):
        time_now = pygame.time.get_ticks()
        enemy_cooldown = 1000
        if time_now - self.last_enemy_shot > enemy_cooldown and len(enemy_bullet_group) < 6 and len(enemy_group) > 0:
            attacking_enemy = random.choice(enemy_group.sprites())
            enemy_bullet = Enemies_Bullets(attacking_enemy.rect.centerx, attacking_enemy.rect.bottom)
            enemy_bullet_group.add(enemy_bullet)
            self.last_enemy_shot = time_now

    def update_animation(self):
        # update animation
        ANIMATION_COOLDOWN = 100
        # update image depending on current frame
        self.image = self.animation_list[self.action][self.frame_index]
        # check if enough time has passed since the last update
        if pygame.time.get_ticks() - self.update_time > ANIMATION_COOLDOWN:
            self.update_time = pygame.time.get_ticks()
            self.frame_index += 1
        # if the animation has run out the reset back to the start
        if self.frame_index >= len(self.animation_list[self.action]):
            if self.action == 1:
                self.frame_index = len(self.animation_list[self.action]) - 1
            else:
                self.frame_index = 0

    def update_action(self, new_action):
        # check if the new action is different to the previous one
        if new_action != self.action:
            self.action = new_action
            # update the animation settings
            self.frame_index = 0
            self.update_time = pygame.time.get_ticks()

    def auto_walk(self):
        dy = 0
        self.timer -= 1
        dy += 1
        self.timereset -= 1
        if self.timer <= 0:
            self.timer = 0
            self.rect.y -= 0.5
        self.rect.y += dy

    def check_alive(self):
        if self.health <= 0:
            self.health = 0
            self.alive = False
            self.kill()

    def draw(self):
        screen.blit(pygame.transform.flip(self.image, self.flip, False), self.rect)


class Enemies1(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        self.alive = True
        self.animation_list = []
        self.frame_index = 0
        self.action = 0
        self.update_time = pygame.time.get_ticks()
        self.last_enemy_shoot = pygame.time.get_ticks()
        self.health = 5
        self.timer = 350
        self.timereset = 400
        self.last_enemy_shot = pygame.time.get_ticks()

        # load all images for the players
        animation_types = ['Idle', 'Death']
        for animation in animation_types:
            # reset temporary list of images
            temp_list = []
            # count number of files in the folder
            num_of_frames = len(os.listdir(f'img/chick1/{animation}'))
            for i in range(num_of_frames):
                img = pygame.image.load(f'img/chick1/{animation}/{i}.png')
                img = pygame.transform.scale(img, (int(img.get_width()), int(img.get_height())))
                temp_list.append(img)
            self.animation_list.append(temp_list)

        self.image = self.animation_list[self.action][self.frame_index]
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.move_counter = 0
        self.move_direction = 1
        self.flip = False

    def update(self):
        self.check_alive()
        self.update_animation()
        if pygame.sprite.spritecollide(self, bullet_group, True, pygame.sprite.collide_mask):
            if self.timereset < 0:
                self.health -= spaceship.damage
                if spaceship.crit > 0:
                    if random.randint(spaceship.crit, 100) == 100:
                        self.health -= spaceship.damage * 2
        for boom in boom_group:
            if pygame.sprite.spritecollide(self, boom_group, True):
                explosion_fx.play()
                explosions = Explosions(boom.rect.centerx, boom.rect.centery, 4)
                explosions_group.add(explosions)
                for enemy1 in enemy_group1:
                    if enemy1.timereset < 0:
                        if abs(enemy1.rect.centerx - boom.rect.centerx) < 350 and abs(
                                enemy1.rect.centery - boom.rect.centery) < 350:
                            enemy1.health -= 10
                for meteor in meteor_group:
                    if abs(meteor.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor.rect.centery - boom.rect.centery) < 350:
                        meteor.health -= 10
                for meteor1 in meteor_group1:
                    if abs(meteor1.rect.centerx - boom.rect.centerx) < 350 and abs(
                            meteor1.rect.centery - boom.rect.centery) < 350:
                        meteor1.health -= 10
            if boom.time <= 1:
                if self.timereset < 0:
                    if abs(self.rect.centerx - boom.rect.centerx) < 350 and abs(
                            self.rect.centery - boom.rect.centery) < 350:
                        self.health -= 10
        if self.alive == False and random.randint(1, 20) == 1:
            Bonus1 = [Item1, Item2, Item3, Item4, Item0]
            bonus1 = random.choice(Bonus1)(self.rect.centerx, self.rect.centery)
            item_group.add(bonus1)

    def move(self):
        dx = 0
        dx += self.move_direction * 3
        self.move_counter += 1
        if abs(self.move_counter) > 30:
            self.move_direction *= -1
            self.move_counter *= self.move_direction
        if self.move_direction == 1:
            self.flip = False
        if self.move_direction == -1:
            self.flip = True
        self.rect.x += dx

    def shoot(self):
        time_now = pygame.time.get_ticks()
        enemy_cooldown = 1000
        if time_now - self.last_enemy_shot > enemy_cooldown and len(enemy_bullet_group1) < 6 and len(enemy_group1) > 0:
            attacking_enemy = random.choice(enemy_group1.sprites())
            enemy_bullet = Enemies_Bullets1(attacking_enemy.rect.centerx, attacking_enemy.rect.bottom)
            enemy_bullet_group1.add(enemy_bullet)
            self.last_enemy_shot = time_now

    def update_animation(self):
        # update animation
        ANIMATION_COOLDOWN = 100
        # update image depending on current frame
        self.image = self.animation_list[self.action][self.frame_index]
        # check if enough time has passed since the last update
        if pygame.time.get_ticks() - self.update_time > ANIMATION_COOLDOWN:
            self.update_time = pygame.time.get_ticks()
            self.frame_index += 1
        # if the animation has run out the reset back to the start
        if self.frame_index >= len(self.animation_list[self.action]):
            if self.action == 1:
                self.frame_index = len(self.animation_list[self.action]) - 1
            else:
                self.frame_index = 0

    def update_action(self, new_action):
        # check if the new action is different to the previous one
        if new_action != self.action:
            self.action = new_action
            # update the animation settings
            self.frame_index = 0
            self.update_time = pygame.time.get_ticks()

    def auto_walk(self):
        dy = 0
        if not enemy.alive:
            self.timer -= 1
            dy += 1.5
            self.timereset -= 1
            if self.timer <= 0:
                self.timer = 0
                self.rect.y -= 0.5
        self.rect.y += dy

    def check_alive(self):
        if self.health <= 0:
            self.health = 0
            self.alive = False
            self.kill()

    def draw(self):
        screen.blit(pygame.transform.flip(self.image, self.flip, False), self.rect)


class Enemies_Bullets(pygame.sprite.Sprite):
    def __init__(self, x, y):
        pygame.sprite.Sprite.__init__(self)
        img = pygame.image.load(f'img/3.png')
        self.image = pygame.transform.scale(img, (int(img.get_width() * 0.05), int(img.get_height() * 0.05)))
        self.rect = self.image.get_rect()
        self.rect.center = [x, y]

    def update(self):
        self.rect.y += 3
        if self.rect.bottom > screen_height:
            self.kill()
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            if spaceship.timereset < 0:
                self.kill()
                explosion_fx.play()
                # reduce spaceship health
                spaceship.remaining -= 1
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)


class Enemies_Bullets1(pygame.sprite.Sprite):
