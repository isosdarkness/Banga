        if self.rect.bottom > screen_height:
            self.kill()
        if pygame.sprite.spritecollide(self, spaceship_group, False, pygame.sprite.collide_mask):
            if spaceship.timereset < 0:
                self.kill()
                explosion_fx.play()
                # reduce spaceship health
                spaceship.remaining -= 1
                explosion = Explosion(self.rect.centerx, self.rect.centery, 2)
                explosion_group.add(explosion)


enemy_group = pygame.sprite.Group()
enemy_group1 = pygame.sprite.Group()
enemy_bullet_group = pygame.sprite.Group()
enemy_bullet_group1 = pygame.sprite.Group()


def create_enemies():
    # generate aliens
    for i in range(6):
        for j in range(5):
            enemy = Enemies(110 + i * 80, 20 + j * 70)
            enemy_group.add(enemy)
    for i in range(5):
        for j in range(5):
            enemy1 = Enemies1(110 + i * 100, -650 + j * 150)
            enemy_group1.add(enemy1)


create_enemies()

box = Box(300, -1500)
box_group = pygame.sprite.Group()
box_group.add(box)

meteor = Meteor(-1400, -2700)
meteor1 = Meteors(100, -5700)
